<Window x:Name="MainForm" x:Class="SmearTracer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Title="SmearTracer" Height="650" Width="600" WindowStartupLocation="CenterScreen">
    <Grid x:Name="MainGrid">
        <Grid HorizontalAlignment="Center" Margin="5,5,5,30" VerticalAlignment="Top">
            <Image x:Name="ImageDisplay" Stretch="Uniform"/>
        </Grid>
        <Button x:Name="ButtonOpenFile" Content="Оpen" Margin ="0,0,0,5" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Click="buttonOpenFile_Click"/>
        <Label Name="LabelStatus" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
