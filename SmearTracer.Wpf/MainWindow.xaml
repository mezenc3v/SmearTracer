<Window x:Name="MainForm" x:Class="SmearTracer.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Title="SmearTracer" Height="650" Width="600" WindowStartupLocation="CenterScreen">
    <Grid x:Name="MainGrid">
        <Grid HorizontalAlignment="Center" Margin="5,5,5,30" VerticalAlignment="Top">
            <Image x:Name="Image" Stretch="Uniform"/>
        </Grid>
        <Button x:Name="ButtonLeftImage" Content="(-" Margin ="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="25" Click="ButtonLeftImage_Click" Background="#00000000" BorderBrush="#00707070"/>
        <Button x:Name="ButtonRightImage" Content="-)" Margin ="0,0,5,0" HorizontalAlignment="Right" VerticalAlignment="Center" Width="25" Click="ButtonRightImage_Click" Background="#00000000" BorderBrush="#00707070"/>
        <Button x:Name="ButtonOpenFile" Content="Оpen" Margin ="0,0,0,5" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Click="ButtonOpenFile_Click"/>
        <Label Name="LabelStatus" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</Window>

